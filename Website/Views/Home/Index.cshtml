@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <section>
        <h2>Welkom bij Optistyle</h2>
        <p>Uw specialist in stijlvolle en kwalitatieve brillen.</p>
        <img src="image/winkel.png" alt="Afbeelding van de winkel" class="responsiveImage">
    </section>
</div>
<div class="container">
    <section id="aanbod">
        <h2>Onze brillen</h2>
        <article class="product">
            <img src="image/bril1.jpg" alt="Stijlvolle zwarte bril" class="responsiveImage">
            <p>Stijlvolle zwarte bril - vanaf &euro;99</p>
        </article>
        <article class="product">
            <img src="image/bril2.jpg" alt="Moderne ronde bril" class="responsiveImage">
            <p>Moderne ronde bril - vanaf &euro;129</p>
        </article>
        <article class="product">
            <img src="image/bril3.jpg" alt="Trendy aviator bril" class="responsiveImage">
            <p>Trendy aviator bril - vanaf &euro;149</p>
        </article>
    </section>
</div>
<div class="container">
    <section class="reviews-section">
        <h2>Reviews van klanten</h2>
        <ul class="reviews">
            <li class="review">
                <p class="text">“Altijd vriendelijk en deskundig. Mijn nieuwe bril zat meteen goed.”</p>
                <article class="meta">
                    <span class="name">— Marjan Huismeester</span>
                    <span class="stars r5" aria-label="5 van 5 sterren" role="img"></span>
                </article>
            </li>

            <li class="review">
                <p class="text">“Snelle service en fijne prijs-kwaliteit. Ik kom hier graag terug.”</p>
                <article class="meta">
                    <span class="name">— Alex de Jong</span>
                    <span class="stars r4" aria-label="4 van 5 sterren" role="img"></span>
                </article>
            </li>

            <li class="review">
                <p class="text">“Top geholpen bij het kiezen van lenzen. Duidelijke uitleg van geduldige medewerkers.”</p>
                <article class="meta">
                    <span class="name">— Stefan van Dijk</span>
                    <span class="stars r5" aria-label="5 van 5 sterren" role="img"></span>
                </article>
            </li>
        </ul>

        <a class="review-link" href="/review">Laat een review achter</a>
    </section>
</div>
<div class="container">
    <h2>Openingstijden</h2>
    <p>Wij zijn maandag t/m zaterdag geopend van 9.00 tot 18.00 uur. U kunt altijd vrijblijvend langskomen!</p>
</div>